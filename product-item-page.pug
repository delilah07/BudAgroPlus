                            li
                                .product-item__accordion-header Монтаж
                                .product-item__accordion-body Високий
                            li
                                .product-item__accordion-header Сервісне обслуговування
                                .product-item__accordion-body Високий
                            li
                                .product-item__accordion-header Обзор та відео
                                .product-item__accordion-body Високий

                .product-item__consultation-form
                    .container
                        h4.product-item__form-title Замовити консультацію спеціаліста
                        form
                            .product-item__form-wrapper
                                .product-item__form-column.col-one
                                    input(type="text" name="firm" value="Назва організації")
                                    input(type="text" name="name" value="Ім’я")
                                    input(type="tel" name="telnumber" value="Телефон")
                                .product-item__form-column.col-two
                                    textarea Повідомлення
                            input(type="submit" value="Замовити консультацію" class="default__btn")
                        
                        
